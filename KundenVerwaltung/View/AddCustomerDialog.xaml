<Window x:Class="KundenVerwaltung.View.AddCustomerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KundenVerwaltung.View"
        mc:Ignorable="d"
        Title="AddCustomerDialog"
        Height="300"
        Width="400"
        WindowStartupLocation="CenterOwner">
    
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Kundenname:" />
            <TextBox Text="{Binding CustomerName, UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock Text="E-Mail:" />
            <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock Text="Telefonnummer:" />
            <TextBox Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged}" />

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="10">

                <Button Content="Speichern"
                        Command="{Binding SaveCommand}"
                        Width="80"
                        Margin="5" />

                <Button Content="Abbrechen"
                        Command="{Binding CancelCommand}"
                        Width="80"
                        Margin="5" />

            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
