<UserControl x:Class="KundenVerwaltung.Controls.LoadingOverlay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:KundenVerwaltung.Controls"
             xmlns:zahnrad="clr-namespace:ERPSteuerelemente;assembly=ERPSteuerelemente"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">

    <Border Background="#80000080"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch">
        <Grid>
            <zahnrad:LadeZahnradSymbol Width="100"
                                       Height="100"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center" />
        </Grid>
    </Border>
</UserControl>
